@*@model Admin.Models.Master.CreateUpdateRegionModel*@

@using Admin.Models.Master
@model CreateUpdateRegionModel
@{
    string errorMessage = ViewBag.ErrorMessage as string;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal_booking modal_booking_iframe">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h2 class="modal-title title-popup">
            @if (Model == null || (Model != null && Model.RegionId == 0))
            {
                @(LayoutResource.Region_PopupCreate_Title)
            }
            else
            {
                @(LayoutResource.Region_PopupUpdate_Title)
            }
        </h2>
        <p class="place"></p>
    </div>
    <div class="modal-body">
        <div class="body_booking">

            @if (string.IsNullOrEmpty(errorMessage) == false)
            {
                @Html.Partial("_ErrorOccur", errorMessage)
            }
            else if (Model == null)
            {
                @Html.Partial("_ErrorOccur", LayoutResource.Shared_NoRowFound)
            }
            else
            {
                using (Ajax.BeginForm("CreateUpdateRegion", "Master", new AjaxOptions { HttpMethod = "Post", OnSuccess = "SaveResult" }, new { onsubmit = "removeDisabled();$('#err_msg').html('').hide();" }))
                {
                    @Html.Hidden("Id", Model.Id)
                    @Html.Hidden("RegionId", Model.RegionId)
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-xs-12">
                            @Html.LabelFor(x => x.RegionCode, "Code", new { @class = "req" })
                            @Html.TextBoxFor(x => x.RegionCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegionCode)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @Html.LabelFor(x => x.RegionName, "Name", new { @class = "req" })
                            @Html.TextBoxFor(x => x.RegionName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegionName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @Html.LabelFor(x => x.Description, "Description")
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group relative not_input_error not_input_error_popup" style="top: 0;">
                            <span id="err_msg" class="field-validation-error" style="display:none"></span>
                        </div>
                    </div>
                    <div class="btn-wrapper text-right">
                        <button class="btn btn-accept" tabindex="8" type="submit"><i class="fa fa-save"></i>&nbsp;@LayoutResource.Shared_BtnText_Save</button>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section styles{
    <style>
        .select2-results .select2-disabled {
            display: none;
        }
    </style>
}
@section scripts{
    @if (ViewBag.IsSuccess != null && (bool)ViewBag.IsSuccess)
    {
        TempData[AdminGlobal.ActionMessage] = ViewBag.ActionMessage;

        <script type="text/javascript">
            parent.window.location.reload();
        </script>
    }

    <script>
        function removeDisabled() {
            $("#RegionId,#RegionCode,#RegionName,#Description").removeAttr("disabled");
            $("#err_msg").html("").hide();
        }

        function SaveResult(data)
        {
            if (!data.Id)
            {
                $("#err_msg").html(msg_lang.Shared_SystemErrorMessage).show();
                HideOverlay(0);
            }
            else if (data.Id == 200802 || data.Id == 200801)
            {
                parent.window.location.reload();
            }
            else
            {
                $("#err_msg").html(data.Message).show();
                HideOverlay(0);
            }
        }
        $(function () {
            $("#RegionCode").focus();
        });
    </script>
}
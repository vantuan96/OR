@*@model System.Collections.Generic.List<Contract.MasterData.StaffListContract>*@
@using Contract.MasterData;
@model List<StaffListContract>
@{

    ViewBag.Title = "Staff List";
}

<div id="main_wrapper">
    <div class="page_bar clearfix">
        <div class="row">
            <div class="col-md-6">
                <div class="">
                    <h1 class="page_title">Staff List</h1>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <div class="div_add_fast">
                    @if (Functions.CheckAllowAction("Master", "CreateUpdateStaffList"))
                    {
                        @Html.CreateToPopupBtn(height: 650, isLgSize: true, href: @Url.Action("CreateUpdateStaffList", "Master"), text: @LayoutResource.Master_PopupCreateStaffList_Title)
                    }
                </div>
            </div>
        </div>
    </div>


    <div class="page_content">
        <div class="bg_page_fix"><i class="fa fa-window-restore"></i></div>
        <div class="container-fluid">
            <div class="panel panel-default">
                <div class="panel-heading">@LayoutResource.Shared_BtnText_Search</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.AntiForgeryToken()
                            <div>
                                <div class="row">
                                    <div class="col-sm-8 col-md-6">
                                        <div class="input-group ">
                                            <label>Từ khóa</label>
                                            <input tabindex="8" type="text" id="txt_keyword" class="form-control" name="keyword" tabindex="1" autofocus />
                                            <span class="input-group-btn">
                                                <label>&nbsp;</label>
                                                <button title="@LayoutResource.CMS_ButtonText_ClearFilter" tabindex="100"
                                                        class="Tip_mouse_on_ne btn btn-danger btn-search" style=""
                                                        id="clearFilter">
                                                    <i class="fa fa-remove"></i>
                                                </button>
                                                <button title="@LayoutResource.CMS_ButtonText_Search" tabindex="10"
                                                        class="Tip_mouse_on_ne btn btn-master btn-search"
                                                        style="width: 90px" id="searchSubmit">
                                                    <i class="fa fa-search"></i> @LayoutResource.CMS_ButtonText_Search
                                                </button>

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-heading">Danh sách nhân viên</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (Model != null && Model.Any())
                            {
                                <div class="table-responsive">
                                    <table id="dt_basic" class="table table-striped info-table margin_b0 table_booking table_week">
                                        <thead>
                                            <tr>
                                                <th class="sub_col" style="max-width: 20px;width:20px">@LayoutResource.Shared_Label_SortNumber</th>
                                                <th searchable class="sub_col" style="max-width: 50px;width:50px">@LayoutResource.Master_StaffList_Label_Title_Code</th>
                                                <th searchable class="sub_col" style="max-width: 100px;width:100px">@LayoutResource.Master_StaffList_Label_Title_FullName</th>
                                                <th searchable class="sub_col" style="max-width: 30px; width: 30px">@LayoutResource.Master_StaffList_Label_Title_General</th>
                                                <th searchable class="sub_col" style="max-width: 160px;width:160px">@LayoutResource.Master_StaffList_Label_Title_Email</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_PhoneNo</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_UnitCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_CentreCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_DepartmentCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_GroupName</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_Status</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_OfficeLocation</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_CityCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_TitleCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_LevelCode</th>
                                                <th searchable class="sub_col" >@LayoutResource.Master_StaffList_Label_Title_ManageCode</th>
                                                <th searchable class="sub_col" style="max-width: 180px;width:180px">@LayoutResource.Master_StaffList_Label_Title_BirthDate</th>
                                                <th searchable class="sub_col" style="max-width: 180px;width:180px">@LayoutResource.Master_StaffList_Label_Title_JoinCompaneDate</th>
                                                <th class="sub_col" style="max-width: 200px;width:200px"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ var rownumber = 0;}
                                            @foreach (var ms in Model)
                                            {
                                                <tr>
                                                    <td class="sub_col">
                                                        <span>@(++rownumber)</span>
                                                    </td>
                                                    <td class="">
                                                        @ms.StaffListCode
                                                    </td>
                                                    <td>
                                                        @ms.FullName
                                                    </td>
                                                    <td>
                                                        @ms.GeneralName
                                                    </td>
                                                    <td>
                                                        @ms.Email
                                                    </td>
                                                    <td>
                                                        @ms.PhoneNo
                                                    </td>
                                                    <td>
                                                        @ms.UnitCode
                                                    </td>
                                                    <td>
                                                        @ms.CentreCode
                                                    </td>
                                                    <td>
                                                        @ms.DepartmentCode
                                                    </td>
                                                    <td>
                                                        @ms.GroupCode
                                                    </td>
                                                    <td>
                                                        @ms.StatusName
                                                    </td>
                                                    <td>
                                                        @ms.OfficeLocation
                                                    </td>
                                                    <td>
                                                        @ms.CityCode
                                                    </td>
                                                    <td>
                                                        @ms.TitleCode
                                                    </td>
                                                    <td>
                                                        @ms.LevelCode
                                                    </td>
                                                    <td>
                                                        @ms.ManagerCode
                                                    </td>
                                                    <td>
                                                        @ms.BirthDate
                                                    </td>
                                                    <td>
                                                        @ms.JoinCompanyDate
                                                    </td>
                                                    <td class="text-center">
                                                        @if (Functions.CheckAllowAction("Master", "CreateUpdateStaffList"))
                                                        {
                                                            @Html.EditToPopupBtn(href: Url.Action("CreateUpdateStaffList", "Master", new { id = ms.StaffListId }), isLgSize: true)
                                                        }

                                                        @if (Functions.CheckAllowAction("Master", "DeleteStaffList"))
                                                        {
                                                            @Html.DeleteBtn(isShowLoading: false, href: "javascript:DeleteStaffList(" + ms.StaffListId + ")")
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                @Html.Partial("_ErrorOccur", LayoutResource.Shared_NoRowFound)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    @Scripts.Render("~/Datatables")

    <script>
        var deleteMicrositeUrl = '@Url.Action("DeleteStaffList")';

        $(document).ready(function () {
            // sort duoi client
            oTable = initDataTable('#dt_basic', '', @AdminConfiguration.Paging_PageSize, false);
            //oTable = $('#dt_basic').dataTable({ "iDisplayLength": displayLengh, bFilter: false, bPaginate: isShowPagination });
            oTable.fnSort([[0, 'asc']]);

            $("#txt_keyword").on("keyup", function (e) {
                if (e.which == 13) {
                    return false;    //<---- Add this line
                }
            });

            $("#clearFilter").on("click", function (e) {
                $("#txt_keyword").val("");
                $("#searchSubmit").trigger('click');
            });

            $("#searchSubmit").on('click', function() {
                console.log("search");
                $('#dt_basic').DataTable().search($("#txt_keyword").val().trim()).draw();
            });
        });

        function DeleteStaffList(id) {
            bootbox.confirm({
                title: layout_lang.Shared_PopupConfirmTitle,
                message: msg_lang.StaffList_SuccessConfirm,
                callback: function (confirm) {
                    if (confirm) {
                        ShowOverlay(true);
                        var postData = new Array();
                        postData.push({ name: 'id', value: id });
                        commonUtils.postAjaxWithToken(deleteMicrositeUrl, postData, function (result) {
                        //$.post(deleteMicrositeUrl, { id: id }, function (result) {
                            if (result.ID == 1) {
                                ReloadWithMasterDB();
                            }
                            else {
                                ShowNotify('error', result.Message);
                                HideOverlay();
                            }
                        });
                    }
                }
            });
        }

    </script>
}

@section style{
    <style>
        .well.well-sm {
            display: none;
        }

        .dataTables_wrapper {
            overflow: auto !important;
        }

    </style>
}
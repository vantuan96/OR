@model string

<div class="modal fade modal_booking" id="recheck_password_user" aria-hidden="true" data-backdrop="static" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h2 class="modal-title title-popup">Xác thực mật khẩu</h2>
                <br />
            </div>
            <div class="modal-body">
                <div class="body_booking">
                    <div class="dis_tbl" style="width:100%;">
                        <input type="password" id="txtPassword" name="txtPassword" class="form-control" required="" style="width:100%;" placeholder="Nhập mật khẩu của bạn để xác thực" />
                    </div>
                    <div class="btn-wrapper text-right">
                        <button class="btn btn-default btn-submit" type="submit" tabindex="7"><i class="fa fa-check"></i>&nbsp;Xác nhận</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using Admin.Models.User
@model CreateUpdateRoleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal_booking modal_booking_iframe">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h2 class="modal-title title-popup">
            @if (Model.RoleId > 0)
            {
                @LayoutResource.UserMngt_PopupUpdateRole_Title
            }
            else
            {
                @LayoutResource.UserMngt_PopupCreateRole_Title
            }
        </h2>
        <p class="place"></p>
    </div>
    <div class="modal-body">
        <div class="body_booking">
            @using (Ajax.BeginForm("CreateUpdateRole", "UserMngt", new AjaxOptions { HttpMethod = "Post", OnSuccess = "CreateUpdateFormSubmitSuccess" }, new { onsubmit = "$('#err_msg').html('').hide();" }))
            {
                @Html.HiddenFor(r => r.RoleId)
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.RoleName, new { @class = "req" })
                        @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RoleName)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Sort, new { @class = "req" })
                        @Html.TextBoxFor(x => x.Sort, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Sort)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-right">
                        <button class="btn btn-accept" tabindex="8" type="submit"><i class="fa fa-save"></i>&nbsp;@LayoutResource.Shared_BtnText_Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>